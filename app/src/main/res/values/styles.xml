<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Message">

    </style>

    <style name="Message.Incoming" parent="Message">
        <item name="android:textColor">@color/incomingMessageText</item>
    </style>

    <style name="Message.Outgoing" parent="Message">
        <item name="android:textColor">@color/outgoingMessageText</item>
    </style>

    <style name="Message.Outgoing.Form" parent="Message.Outgoing">
        <item name="android:editTextColor">@color/outgoingMessageText</item>
        <item name="android:backgroundTint">@color/outgoingMessageText</item>
        <item name="android:textColorHint">@color/outgoingMessageText</item>
    </style>
</resources>
